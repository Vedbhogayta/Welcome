<script>
    const userForm = document.getElementById('userForm');
const detailsSection = document.getElementById('detailsSection');
const passwordInput = document.getElementById('password');

// Demo password
const demoPassword = "12345";

// Store user details
let userDetails = [];

userForm.addEventListener('submit', function(e) {
    e.preventDefault();

    // Fetching form values
    const userName = document.getElementById('userName').value;
    const schoolName = document.getElementById('schoolName').value;
    const userImage = document.getElementById('userImage').files[0];

    // Storing in the array
    userDetails.push({userName, schoolName, userImage});

    // Clear the form
    userForm.reset();
});

function showDetails() {
    if (passwordInput.value === demoPassword) {
        detailsSection.innerHTML = ''; // Clear previous details
        
        userDetails.forEach(user => {
            const div = document.createElement('div');
            div.innerHTML = `
                <p>Name: ${user.userName}</p>
                <img src="${URL.createObjectURL(user.userImage)}" alt="${user.userName}" width="100">
                <p>School/College: ${user.schoolName}</p>
            `;
            detailsSection.appendChild(div);
        });
    } else {
        alert('Incorrect Password!');
    }
}

</script>
