  <div>𝐏𝐫𝐨𝐨𝐟 𝐘𝐨𝐮 𝐀𝐫𝐞 𝐈𝐧 𝐒𝐭𝐮𝐝𝐞𝐧𝐭𝐬</div>
    <!-- Form to enter user details -->
    <div class="form-container">
        <form action="studentbooking.html" method="post" id="userForm">
            <input type="text" id="userName" placeholder="Enter Name" required>
            <input type="file" id="userImage" required>
            <input type="text" id="schoolName" placeholder="Enter School/College Name" required>
            <select id="gender">
                <option value="boy">Boy</option>
                <option value="girl">Girl</option>
            </select>
            <button type="submit">Submit</button>
